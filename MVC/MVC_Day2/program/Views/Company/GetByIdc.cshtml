@using program.Models.Entities
@model Company
<div class="container mt-5 d-flex justify-content-center">
    <div class="card mb-3 shadow" style="width: 60%;">
        <div class="row g-0">
            <div class="col-md-8 mx-auto">
                <div class="card-body text-center">
                    <h1 class="card-title">@Model.CompanyName</h1>
                    <h5 class="text-muted mb-3">@Model.CompanyType</h5>
                    <p class="card-text"><strong>Address:</strong> @Model.CompanyAddress</p>
                    <p class="card-text"><strong>Start Date:</strong> @Model.CompanyStartDate</p>
                    <h6 class="card-title"><strong>Number of Employees:</strong> @Model.Employees.Count</h6>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="container d-flex justify-content-center mt-3">
    <a href="/Company/Edit/@Model.CompanyId" class="btn btn-outline-primary mx-2">Edit Company</a>

    <form asp-action="Delete" asp-controller="Company" method="post" onsubmit="return confirm('Are you sure you want to delete this company?');" style="display:inline;">
        <input type="hidden" name="id" value="@Model.CompanyId" />
        <button type="submit" class="btn btn-outline-danger mx-2">Delete Company</button>
    </form>
</div>

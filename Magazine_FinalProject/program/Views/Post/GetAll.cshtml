@model List<Post>
@using program.Models.Entities

<div class="container mt-4">
   

    <div class="row g-4">
        <!-- Loop through each post and make it full-width (col-12) -->
        @foreach (var i in Model)
        {
            <div class="col-12 mb-4">
                <!-- Each post in a new row -->
                <div class="card h-100">
                    <div class="row">
                        <!-- Image Column -->
                        <div class="col-md-5">
                            <img class="card-img-top" src="~/images/@i.PostImage" alt="Card image cap" style="width: 100%; height: auto; object-fit: cover;">
                        </div>

                        <!-- Text and Button Column -->
                        <div class="col-md-7 px-3">
                            <div class="card-block px-6">
                                <h4 class="card-title">@i.PostTitle</h4>
                                <p class="card-text">
                                    <small class="text-muted">
                                        <i class="far fa-user"></i> Written by: @i.PostUser.UserName
                                        <br />
                                        <i class="far fa-user"></i> @i.PostCategory.CategoryName
                                        <br />
                                        <i class="fas fa-calendar-alt"></i> @i.PostDate
                                    </small>
                                </p>
                                <a asp-action="GetById" asp-controller="Post" asp-route-id="@i.PostId" class="btn btn-success">Read More</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div> <!-- End of col-12 -->
        }
    </div>
</div>
<div style="margin-top: 10vh; margin-left: 35vw">
    <a asp-action="Create" asp-controller="Post" class="mt-auto btn btn-primary">Add new news</a>
</div>

<!-- Custom Styles -->
<style>
    body {
        background-color: #eee;
    }

    .card {
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
        transition: 0.3s;
        border: none;
        margin-top: 20px; /* Space between cards */
    }

        .card:hover {
            box-shadow: 0 8px 16px rgba(0, 0, 0, 0.4);
        }

    .card-block {
        padding: 1em;
        border: none;
        border-top: 1px solid rgba(34, 36, 38, .1);
    }

    .card-title {
        text-transform: uppercase;
        margin-bottom: 1em;
    }

    a {
        color: inherit;
        text-decoration: none;
    }

        a:hover {
            text-decoration: none;
        }

    .text-muted i {
        margin: 0 10px;
    }

    .btn {
        margin-top: auto;
    }

    .btn-success {
        background-color: #0d98ba;
        color: white; /* Text color */
        border: none;
        padding: 10px 20px;
        border-radius: 50px; /* Makes the button rounded */
    }

        .btn-success:hover {
            background-color: #355C7D;
            border: none;
            border-radius: 50px; /* Maintain rounded corners on hover */
        }

    .btn-primary {
        background-color: transparent; /* Transparent background for outline */
        border: 2px solid #0d98ba; /* Border color */
        color: #0d98ba; /* Text color */
        padding: 10px 20px;
        border-radius: 50px; /* Makes the button rounded */
        transition: background-color 0.3s ease, color 0.3s ease;
    }

        .btn-primary:hover {
            background-color: #355C7D; /* Filled background on hover */
            color: white; /* Change text color on hover */
            border: 2px solid #355C7D; /* Border color matches hover background */
            border-radius: 50px; /* Maintain rounded corners */
        }

</style>

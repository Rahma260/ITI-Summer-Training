<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - program</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/program.styles.css" asp-append-version="true" />
    <style>
        /* Custom style for navbar text color */
        .navbar .nav-link {
            color: white; /* Change text color to white */
        }

            /* Optional: Change color on hover */
            .navbar .nav-link:hover {
                color: white; /* A lighter shade for hover effect */
            }
    </style>
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg" style="background-color:paleturquoise;">
            <div class="container-fluid">
                <a class="navbar-brand" href="#" style="color: black;">Magazine</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarColor02" aria-controls="navbarColor02" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarColor02">
                    <ul class="navbar-nav me-auto">
                        <li class="nav-item">
                            <a class="nav-link active" asp-action="Index" asp-controller="Home" style="color: black;">
                                Home
                                <span class="visually-hidden">(current)</span>
                            </a>
                        </li>
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" data-bs-toggle="dropdown" href="#" role="button" aria-haspopup="true" aria-expanded="false" style="color: black;">Features</a>
                            <div class="dropdown-menu">
                                <a class="dropdown-item" asp-action="GetAll" asp-controller="User" style="color: black;">Authors</a>
                                <a class="dropdown-item" asp-action="GetAllC" asp-controller="Category" style="color: black;">Departments</a>
                                <a class="dropdown-item" asp-action="GetAll" asp-controller="Post" style="color: black;">News</a>
                            </div>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="#" style="color: black;">About</a>
                        </li>
                    </ul>
                    <form class="d-flex">
                        <input class="form-control me-sm-2" type="search" placeholder="Search">
                        <button class="btn btn-secondary my-2 my-sm-0" type="submit">Search</button>
                    </form>
                </div>
            </div>
        </nav>


    </header>

    <div class="container" style="min-height: 85vh;">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>

